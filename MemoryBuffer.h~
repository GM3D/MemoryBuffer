#ifndef MEMORY_BUFFER_H
#define MEMORY_BUFFER_H

namespace gm3d {

  template <class T> class MemoryBuffer<T> {
    T *dev_buf;
    T *host_buf;
    size_t size;
    bool host_valid;
    bool dev_valid;
    enum mem_space {host, device, na};
    mem_space last_access;
    MemoryBuffer();
    MemoryBuffer(size_t n, mem_space space=host);
    ~MemoryBuffer();
  };

};
#endif MEMORY_BUFFER_H
